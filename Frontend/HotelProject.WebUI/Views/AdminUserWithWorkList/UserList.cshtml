@model List<HotelProject.WebUI.DTOs.AppUserDto.ResultAppUserWithWorkLocationDto>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Ad Soyad</th>
            <th>Şubesi</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" style="height:50px" alt=""></td>
                <td>@item.Name @item.Surname</td>
                <td>@item.workLocationName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                @if (item.Gender == "Erkek")
                {
                    <td><i class="fa fa-circle-o text-success  mr-2"></i> Erkek</td>
                }
                @if (item.Gender == "Kadın")
                {
                    <td><i class="fa fa-circle-o text-danger  mr-2"></i> Kadın</td>
                }
            </tr>
        }
    </tbody>

</table>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Üye Kaydı</a>